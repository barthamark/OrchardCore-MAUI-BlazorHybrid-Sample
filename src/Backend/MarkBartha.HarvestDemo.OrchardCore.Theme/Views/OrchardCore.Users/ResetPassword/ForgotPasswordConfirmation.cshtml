<div class="text-center mb-8">
    <div class="w-16 h-16 rounded-2xl mx-auto mb-4 flex items-center justify-center bg-brand/10">
        <i data-lucide="circle-check-big" class="h-8 w-8 text-brand" aria-hidden="true"></i>
    </div>
    <h1 class="text-3xl font-bold">@T["Check your email"]</h1>
    <p class="text-[color:var(--color-text-muted)]">
        @T["We've sent password reset instructions to your email."]
    </p>
</div>

<div class="card text-center space-y-4">
    <div class="w-16 h-16 rounded-full mx-auto flex items-center justify-center bg-brand/10">
        <i data-lucide="circle-check-big" class="h-6 w-6 text-brand" aria-hidden="true"></i>
    </div>
    <p>@T["If you don't see the email, check your spam folder."]</p>
    <a asp-area="OrchardCore.Users"
       asp-controller="Account"
       asp-action="Login"
       class="btn btn-primary">
        @T["Back to Sign In"]
    </a>
</div>

<p class="text-center mt-6 text-[color:var(--color-text-muted)]">
    @T["Didn't receive the email?"]
    <a asp-area="OrchardCore.Users"
       asp-controller="ResetPassword"
       asp-action="ForgotPassword"
       class="font-medium text-brand hover:underline">
        @T["Resend"]
    </a>
</p>
