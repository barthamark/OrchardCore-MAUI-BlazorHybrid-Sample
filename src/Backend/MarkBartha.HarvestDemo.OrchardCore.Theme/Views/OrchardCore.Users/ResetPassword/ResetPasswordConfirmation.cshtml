<div class="text-center mb-8">
    <div class="w-16 h-16 rounded-2xl mx-auto mb-4 flex items-center justify-center bg-brand text-white">
        <i data-lucide="circle-check-big" class="h-8 w-8" aria-hidden="true"></i>
    </div>
    <h1 class="text-3xl font-bold">@T["Password reset successful"]</h1>
    <p class="text-[color:var(--color-text-muted)]">
        @T["Your password has been successfully reset."]
    </p>
</div>

<div class="card text-center space-y-4">
    <div class="w-16 h-16 rounded-full mx-auto flex items-center justify-center bg-brand/10">
        <i data-lucide="circle-check-big" class="h-6 w-6 text-brand" aria-hidden="true"></i>
    </div>
    <p>@T["You can now sign in with your new password."]</p>
    <a asp-area="OrchardCore.Users"
       asp-controller="Account"
       asp-action="Login"
       class="btn btn-primary">
        @T["Sign in"]
    </a>
</div>
