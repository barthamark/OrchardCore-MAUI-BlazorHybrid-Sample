<h1 class="text-2xl font-semibold text-primary-700 dark:text-primary-300 mb-4">
    @T["Reset Password"]
</h1>
<p class="text-sm text-gray-700 dark:text-gray-300 leading-relaxed">
    @T["Your password has been reset."]
    @T["Please "]
    <a asp-route-area="OrchardCore.Users"
       asp-controller="Account"
       asp-action="Login"
       class="text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300 underline transition">
        @T["Click here to log in"]
    </a>
</p>
