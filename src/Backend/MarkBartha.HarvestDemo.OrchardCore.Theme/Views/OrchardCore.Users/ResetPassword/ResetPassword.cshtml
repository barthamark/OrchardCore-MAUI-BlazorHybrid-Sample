<a asp-area="OrchardCore.Users"
   asp-controller="Account"
   asp-action="Login"
   class="inline-flex items-center gap-2 text-gray-600 hover:text-gray-900 mb-6 btn-ghost p-0">
    <i class="icon-arrow-left" aria-hidden="true"></i>
    <span class="font-medium">@T["Back to Sign In"]</span>
</a>

<div class="text-center mb-8">
    <div class="w-16 h-16 rounded-2xl mx-auto mb-4 flex items-center justify-center bg-brand text-white">
        <i class="icon-check-circle" aria-hidden="true"></i>
    </div>
    <h1 class="text-3xl font-bold">@T["Reset password"]</h1>
    <p class="text-[color:var(--color-text-muted)]">@T["Enter your new password"]</p>
</div>

<div class="card">
    @await DisplayAsync(Model)
</div>
