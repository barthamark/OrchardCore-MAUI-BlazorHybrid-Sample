@using Microsoft.AspNetCore.Identity
@using OrchardCore.Users
@using OrchardCore.Users.Models

@inject SignInManager<IUser> SignInManager

@{
    var disableLocalLogin = Site.As<LoginSettings>().DisableLocalLogin;
}

<div class="text-center mb-8">
    <div class="w-16 h-16 rounded-2xl mx-auto mb-4 flex items-center justify-center bg-brand text-white">
        <i class="icon-circle-check-big h-8 w-8" aria-hidden="true"></i>
    </div>
    <h1 class="text-3xl font-bold">@T["Welcome back"]</h1>
    <p class="text-[color:var(--color-text-muted)]">
        @T["Sign in to your account to continue"]
    </p>
</div>

@if (!ViewContext.ModelState.IsValid)
{
    <div class="card mb-6 text-sm text-red-500">
        <div asp-validation-summary="ModelOnly"></div>
    </div>
}

@if (!disableLocalLogin)
{
    <div class="card">
        @await DisplayAsync(Model)
    </div>
}
