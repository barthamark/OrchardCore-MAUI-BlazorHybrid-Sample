@model LoginViewModel

<div class="mb-6">
    <label asp-for="UserName" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
        @T["Email"]
    </label>
    <input asp-for="UserName"
           class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-800 dark:text-white"
           autofocus
           tabindex="1" />
    <span asp-validation-for="UserName" class="text-sm text-red-500 mt-1 block"></span>
</div>

<div class="mb-6">
    <label asp-for="Password" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
        @T["Password"]
    </label>
    <div class="relative">
        <input asp-for="Password"
               class="w-full pr-10 px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-800 dark:text-white"
               tabindex="2"
               type="password" />
        <button type="button"
                tabindex="-1"
                id="togglePassword"
                class="absolute inset-y-0 right-0 px-3 flex items-center text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200">
            <i data-lucide="eye"></i>
        </button>
    </div>
    <span asp-validation-for="Password" class="text-sm text-red-500 mt-1 block"></span>
</div>

<div class="mb-6 flex items-center gap-2">
    <input asp-for="RememberMe"
           id="remember-me"
           class="h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 rounded"
           tabindex="3" />
    <label asp-for="RememberMe" class="text-sm text-gray-700 dark:text-gray-300">
        @T["Remember me"]
    </label>
</div>

