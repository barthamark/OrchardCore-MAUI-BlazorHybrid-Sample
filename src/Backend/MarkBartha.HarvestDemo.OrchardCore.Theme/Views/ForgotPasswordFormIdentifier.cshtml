@model ForgotPasswordViewModel

<div class="mb-4">
    <label asp-for="UsernameOrEmail" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
        @T["Username or email address"]
    </label>
    <input asp-for="UsernameOrEmail"
           class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-800 dark:text-white" />
    <span asp-validation-for="UsernameOrEmail" class="text-sm text-red-500 mt-1 block"></span>
</div>
