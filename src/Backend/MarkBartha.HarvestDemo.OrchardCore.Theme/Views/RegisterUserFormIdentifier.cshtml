@model RegisterViewModel

<div class="space-y-5">
    <div>
        <label asp-for="UserName" class="label">
            @T["Full name"]
        </label>
        <input asp-for="UserName"
               class="input"
               placeholder="@T["John Doe"]"
               required
               autofocus />
        <span asp-validation-for="UserName" class="text-sm text-red-500 mt-1 block"></span>
    </div>

    <div>
        <label asp-for="Email" class="label">
            @T["Email"]
        </label>
        <input asp-for="Email"
               type="email"
               autocomplete="username"
               required
               class="input"
               placeholder="you@example.com" />
        <span asp-validation-for="Email" class="text-sm text-red-500 mt-1 block"></span>
    </div>

    <div>
        <label asp-for="Password" class="label">
            @T["Password"]
        </label>
        <input asp-for="Password"
               type="password"
               autocomplete="new-password"
               required
               class="input" />
        <span asp-validation-for="Password" class="text-sm text-red-500 mt-1 block"></span>
    </div>

    <div>
        <label asp-for="ConfirmPassword" class="label">
            @T["Confirm password"]
        </label>
        <input asp-for="ConfirmPassword"
               type="password"
               autocomplete="new-password"
               required
               class="input" />
        <span asp-validation-for="ConfirmPassword" class="text-sm text-red-500 mt-1 block"></span>
    </div>
</div>
