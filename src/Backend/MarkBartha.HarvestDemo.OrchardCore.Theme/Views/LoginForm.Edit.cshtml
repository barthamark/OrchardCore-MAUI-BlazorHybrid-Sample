<form asp-controller="Account"
      asp-action="Login"
      asp-area="OrchardCore.Users"
      asp-route-returnurl="@ViewData["ReturnUrl"]"
      method="post"
      class="space-y-6 no-multisubmit">

    @if (Model.Content != null)
    {
        @await DisplayAsync(Model.Content)
    }

    <div>
        <button type="submit"
                class="w-full bg-primary-600 hover:bg-primary-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-150"
                tabindex="4">
            @T["Log in"]
        </button>
    </div>

    @if (Model.Links != null)
    {
        <ul class="space-y-2 text-sm text-gray-600 dark:text-gray-300">
            @await DisplayAsync(Model.Links)
        </ul>
    }

    @if (Model.Footer != null)
    {
        @await DisplayAsync(Model.Footer)
    }
</form>
