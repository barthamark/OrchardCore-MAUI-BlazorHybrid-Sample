<div class="text-center mb-8">
    <div class="w-16 h-16 rounded-2xl mx-auto mb-4 flex items-center justify-center bg-brand text-white">
        <i class="icon-circle-check-big h-8 w-8" aria-hidden="true"></i>
    </div>
    <h1 class="text-3xl font-bold">@T["Forgot password?"]</h1>
    <p class="text-[color:var(--color-text-muted)]">@T["Enter your email to reset your password"]</p>
</div>

<div class="card">
    @await DisplayAsync(Model)
</div>

<p class="text-center mt-6 text-[color:var(--color-text-muted)]">
    @T["Remember your password?"]
    <a asp-area="OrchardCore.Users"
       asp-controller="Account"
       asp-action="Login"
       class="font-medium text-brand hover:underline">
        @T["Sign in"]
    </a>
</p>
