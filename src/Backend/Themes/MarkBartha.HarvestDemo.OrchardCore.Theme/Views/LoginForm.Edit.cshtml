<form asp-controller="Account"
      asp-action="Login"
      asp-area="OrchardCore.Users"
      asp-route-returnurl="@ViewData["ReturnUrl"]"
      method="post"
      class="space-y-5 no-multisubmit">

    @if (Model.Content != null)
    {
        <div class="space-y-5">
            @await DisplayAsync(Model.Content)
        </div>
    }

    <button type="submit"
            class="btn btn-primary w-full"
            tabindex="4">
        @T["Sign in"]
    </button>

    @if (Model.Links != null)
    {
        <div class="text-sm text-[color:var(--color-text-muted)] flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
            @await DisplayAsync(Model.Links)
        </div>
    }

    @if (Model.Footer != null)
    {
        <div class="text-center text-sm text-[color:var(--color-text-muted)]">
            @await DisplayAsync(Model.Footer)
        </div>
    }
</form>
