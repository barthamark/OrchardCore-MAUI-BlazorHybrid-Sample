<div class="min-h-screen bg-gray-50 dark:bg-gray-950 flex items-center justify-center px-4 py-12">
    <div class="w-full max-w-md space-y-8 text-center">
        <div class="space-y-4">
            <div class="w-16 h-16 rounded-2xl mx-auto flex items-center justify-center bg-brand text-white">
                <i class="icon-log-in h-8 w-8" aria-hidden="true"></i>
            </div>
            <div class="space-y-2">
                <p class="text-sm font-semibold tracking-wide text-brand uppercase">Orchard Harvest 2025 Demo App</p>
                <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Please log in</h1>
            </div>
        </div>

        <div class="card space-y-4">
            <button @onclick="StartLogin"
                    class="btn btn-primary w-full justify-center gap-2 text-base">
                <i class="icon-shield-check h-5 w-5" aria-hidden="true"></i>
                Continue to login
            </button>
            <p class="text-sm text-[color:var(--color-text-muted)]">
                You will be redirected to the secure Harvest Demo App sign-in page.
            </p>
        </div>
    </div>
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        var restored = await AuthStateProvider.TrySilentLoginAsync();
        if (restored)
        {
            NavManager.NavigateTo("/");
        }
    }

    private async Task StartLogin()
    {
        await AuthStateProvider.LoginAsync();
        NavManager.NavigateTo("/");
    }
}
