<div class="min-h-screen flex items-center justify-center bg-white dark:bg-gray-900 px-4">
    <div class="max-w-md w-full bg-white dark:bg-gray-800 rounded-2xl shadow-sm p-8 text-center space-y-6">
        <div class="space-y-2">
            <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Welcome to Forespend</h1>
            <p class="text-sm text-gray-500 dark:text-gray-400">
                Please log in to continue.
            </p>
        </div>

        <button @onclick="StartLogin"
                class="w-full py-2 px-4 text-sm font-medium text-primary-600 dark:text-primary-400 border border-primary-200 dark:border-primary-800 rounded-lg hover:bg-primary-50 dark:hover:bg-primary-900/50 transition duration-200">
            Log In with your Account
        </button>
    </div>
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        var restored = await AuthStateProvider.TrySilentLoginAsync();
        if (restored)
        {
            NavManager.NavigateTo("/");
        }
    }

    private async Task StartLogin()
    {
        await AuthStateProvider.LoginAsync();
        NavManager.NavigateTo("/");
    }
}
