@if (IsOpen)
{
    <!-- Overlay -->
    <div class="fixed inset-0 z-50 bg-black/50" @onclick="Close">
        <!-- Sidebar -->
        <div class="fixed top-0 left-0 bottom-0 w-[280px] bg-white dark:bg-gray-800 shadow-xl"
             @onclick:stopPropagation>
            <div class="flex flex-col h-full">

                <!-- Header -->
                <div class="flex justify-between items-center p-4 border-b border-gray-200 dark:border-gray-700">
                    <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Menu</h2>
                    <button class="p-1 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700" @onclick="Close">
                        <i class="icon-x text-[20px] text-gray-500 dark:text-gray-300"></i>
                    </button>
                </div>

                <!-- Profile -->
                <div class="p-4 border-b border-gray-200 dark:border-gray-700">
                    <div class="flex items-center gap-3 mb-3">
                        <div class="w-12 h-12 bg-primary-100 dark:bg-primary-900/50 rounded-full flex items-center justify-center">
                            <i class="icon-user text-[24px] text-primary-600 dark:text-primary-400"></i>
                        </div>
                        <div>
                            <h3 class="font-medium text-gray-900 dark:text-white">@AppState.UserProfile?.UserName</h3>
                            <p class="text-sm text-gray-500 dark:text-gray-400">@AppState.UserProfile?.Email</p>
                        </div>
                    </div>
                    <div class="px-3 py-1.5 bg-primary-50 dark:bg-primary-900/50 rounded-lg">
                        <span class="text-sm text-primary-600 dark:text-primary-400 font-medium">
                            Free Plan
                        </span>
                    </div>
                </div>

                <!-- Menu Items -->
                <div class="flex-1 overflow-y-auto">
                    <div class="p-2 space-y-1">
                        @foreach (var item in MenuItems)
                        {
                            <a class="flex items-center justify-between p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 cursor-pointer"
                               @onclick="() => NavigateTo(item.Path)">
                                <div class="flex items-center gap-3">
                                    <i class="@($"icon-{item.Icon} text-[20px] text-gray-500 dark:text-gray-400")"></i>
                                    <span class="text-gray-700 dark:text-gray-300">@item.Label</span>
                                </div>
                                <i class="icon-chevron-right text-[18px] text-gray-400"></i>
                            </a>
                        }
                    </div>
                </div>

                <!-- Footer -->
                <div class="p-4 border-t border-gray-200 dark:border-gray-700">
                    <button @onclick="SignOut"
                            class="flex items-center gap-2 w-full p-2 text-red-600 dark:text-red-400 rounded-lg hover:bg-red-50 dark:hover:bg-red-900/20">
                        <i class="icon-log-out text-[20px]"></i>
                        <span>Sign Out</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool IsOpen { get; set; } = true;
    [Parameter] public EventCallback OnClose { get; set; }

    private void Close() => OnClose.InvokeAsync();

    private void NavigateTo(string path)
    {
        NavManager.NavigateTo(path);
        Close();
    }

    private record MenuItem(string Label, string Icon, string Path);

    private List<MenuItem> MenuItems => new()
    {
        new("Notifications", "bell", "/settings/notifications"),
        new("Settings", "settings", "/profile"),
        new("Transactions", "history", "/history")
    };

    private async Task SignOut()
    {
        await AuthStateProvider.LogoutAsync();
    }
}
